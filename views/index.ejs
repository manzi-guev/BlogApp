<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>
  <body>
    <div class="ui inverted menu">
      <div class="ui container">
        <div class="header item"><i class="code icon"></i> Blog Site</div>
        <a href="/" class="item">Home</a>
        <a href="/blogs/new" class="item">New Post</a>
      </div>
    </div>
    <div>
      <div class="ui main text container">
        <div class="ui huge header">
          RESTful Blog App
        </div>
        <div class="ui top attached segment">
          <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
              <div class="image">
                <img src="<%=blog.image%>" alt="" />
              </div>
              <div class="content">
                <a class="header" href="/blogs/<%=blog._id%>"
                  ><%= blog.title%></a
                >
                <div class="meta">
                  <span><%=blog.createdOn.toDateString()%></span>
                </div>
                <div class="description">
                  <p><%-blog.body.substring(0, 100)%>...</p>
                </div>
                <div class="extra">
                  <a
                    class="ui floated basic violet button"
                    href="/blogs/<%=blog._id%>"
                    >Read More<i class="right chevron icon"></i
                  ></a>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
